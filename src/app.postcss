@tailwind base;
@tailwind components;
@tailwind utilities;

.background {
	background: linear-gradient(132deg, rgb(19, 19, 30), rgb(19, 19, 30), rgb(20, 19, 30));
	background-size: 200% 200%;
	animation: Gradient 20s ease infinite;
	position: relative;
	height: 100vh;
	width: 100%;
	overflow: hidden;
	padding: 0;
	margin: 0px;
}
@keyframes Gradient {
	0% {
		background-position: 0% 50%;
	}
	50% {
		background-position: 100% 50%;
	}
	100% {
		background-position: 0% 50%;
	}
}
